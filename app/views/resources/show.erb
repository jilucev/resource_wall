<h1>Resource Feedback</h1>

<% @resource  %>
<% @resources  %>
<% @reviews  %>
<% @review  %>


<a href="/resources">Back to The Goldmine</a>

<p>
  <h3> <a href="<%= @resource.url %>"><%= @resource.title %></a>
</p>

 <% if current_user %>

  <% unless current_user.already_voted?(@resource) %>
  <div>
    <h3>Please up or down vote this article. Your feedback will affect the poster's points!</h3>
  </div>
   <form 
     method="post" 
     action="/resources/upvote/<%= @resource.id%>">
    <button type="submit" class="btn btn-default btn-lg btn-success">
      <span class="glyphicon glyphicon-arrow-up"></span>
    </button>
  </form>

   <form 
     method="post" 
     action="/resources/downvote/<%= @resource.id%>">
      <button type="submit" class="btn btn-default btn-lg btn-danger">
        <span class="glyphicon glyphicon-arrow-down"></span>
      </button>
  </form>

  <% else %>

  <h3>Thanks for your feedback! Please add your review</h3>
 
  

  <form method="post" action="/resources/<%= @resource.id %>/review">
  <textarea rows="10" cols="50" name="review_text">
 
  </textarea>
  <button type="submit" class="btn btn-primary btn-info">Post</button>
</form>

 <div>

    <h3>Did you like or dislike this review?</h3>
    <h4>Comments by others:<h4>
      <br>
  </div>

 <% @reviews.each do |review| %> 
<h5><%= review.review_text %></h5>
 </div>
   <form 
     method="post" 
     action="/resources">
    <button type="submit" class="btn btn-default btn-sm btn-warning">
      <span class="glyphicon glyphicon-thumbs-up"></span>
    </button>
  </form>

   <form 
     method="post" 
     action="">
      <button type="submit" class="btn btn-default btn-sm btn-warning">
        <span class="glyphicon glyphicon-thumbs-down"></span>
      </button>
  </form>

<% end %>
  <% end %>
  <%end%>